{
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/channels",
      "schedule": "0 * * * *"
    }
  ],
  "redirects": [
    { "source": "/clean", "destination": "/app", "statusCode": 301 },
    { "source": "/summary", "destination": "/app", "statusCode": 301 },
    { "source": "/quotes", "destination": "/app", "statusCode": 301 },
    { "source": "/repurpose", "destination": "/app", "statusCode": 301 },
    { "source": "/analyze", "destination": "/app", "statusCode": 301 },
    { "source": "/create", "destination": "/app", "statusCode": 301 },
    { "source": "/dashboard", "destination": "/app", "statusCode": 301 },
    { "source": "/search", "destination": "/app", "statusCode": 301 },
    { "source": "/transcripts", "destination": "/app", "statusCode": 301 }
  ],
  "rewrites": [
    { "source": "/api/auth/google", "destination": "/api/auth/google" },
    { "source": "/api/auth/callback", "destination": "/api/auth/callback" },
    { "source": "/api/auth/me", "destination": "/api/auth/me" },
    { "source": "/api/auth/logout", "destination": "/api/auth/logout" },
    { "source": "/api/auth/link-stripe", "destination": "/api/auth/link-stripe" },
    { "source": "/api/checkout", "destination": "/api/checkout" },
    { "source": "/api/webhook", "destination": "/api/webhook" },
    { "source": "/api/channel", "destination": "/api/channel" },
    { "source": "/api/cron/cleanup", "destination": "/api/cron/cleanup" },
    { "source": "/api/cron/channels", "destination": "/api/cron/channels" },
    { "source": "/api/generate", "destination": "/api/generate" },
    { "source": "/api/transcript", "destination": "/api/transcript" },
    { "source": "/api/resolve", "destination": "/api/resolve" },
    { "source": "/api/checkout-single", "destination": "/api/checkout" },
    { "source": "/api/library", "destination": "/api/library" },
    { "source": "/app", "destination": "/app.html" },
    { "source": "/library", "destination": "/library.html" }
  ]
}
